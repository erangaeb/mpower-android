<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e4e4e4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/switch1_layout"
            android:background="@drawable/green_button_selector"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:clickable="true"
            android:layout_weight="1">
            <TextView
                android:layout_width="40dp"
                android:id="@+id/switch1_icon"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="#"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_shape_gray"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="35sp"
                android:layout_marginLeft="38dp"
                android:layout_centerInParent="true"
                android:id="@+id/switch1_text"
                android:text="Bed Room"
                android:textColor="#4a4a4a"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/switch2_layout"
            android:background="@drawable/red_button_selector"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:clickable="true"
            android:layout_weight="1">
            <TextView
                android:layout_width="40dp"
                android:id="@+id/switch2_icon"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="!"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_shape_gray"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="35sp"
                android:layout_marginLeft="38dp"
                android:layout_centerInParent="true"
                android:id="@+id/switch2_text"
                android:text="Kitchen"
                android:textColor="#4a4a4a"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/settings_layout"
            android:clickable="true"
            android:background="@drawable/green_button_selector"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="40dp"
                android:id="@+id/switch3_icon"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="#"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_shape_gray"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="35sp"
                android:layout_marginLeft="38dp"
                android:layout_centerInParent="true"
                android:id="@+id/switch3_text"
                android:text="Store Room"
                android:textColor="#4a4a4a"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/bed_rooms"
            android:clickable="true"
            android:background="@drawable/green_button_selector"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="40dp"
                android:id="@+id/switch4_icon"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="#"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_shape_gray"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="35sp"
                android:layout_marginLeft="38dp"
                android:layout_centerInParent="true"
                android:id="@+id/switch4_text"
                android:text="Cabin"
                android:textColor="#4a4a4a"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>