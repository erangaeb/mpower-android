<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:background="@drawable/my_sensor_background"
    android:layout_height="105dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:id="@+id/friend_list_row_layout_user_icon"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_shape_green"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/icon_text"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/friend_list_row_layout_user_icon"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/power_usage"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/friend_list_row_layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="2015-03-10"
                    android:textColor="#4a4a4a"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:id="@+id/usage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="Normal"
                    android:textColor="#4a4a4a"
                    android:layout_marginRight="15dp">
                </TextView>

            </LinearLayout>



            <TextView
                android:id="@+id/friend_list_row_layout_vol"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/power_usage"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:text="230 V"
                android:textColor="#4a4a4a">
            </TextView>

            <TextView
                android:id="@+id/friend_list_row_layout_cur"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/friend_list_row_layout_vol"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:text="1200 MHz"
                android:textColor="#4a4a4a">
            </TextView>
            <TextView
                android:id="@+id/friend_list_row_layout_frq"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/friend_list_row_layout_cur"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:text="450 A"
                android:textColor="#4a4a4a">
            </TextView>

        </RelativeLayout>


        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DADADC" >
        </View>
    </RelativeLayout>

</LinearLayout>